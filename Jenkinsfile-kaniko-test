  pipeline {
    agent none
    stages {
      stage('Build with Maven'){
        agent {
             kubernetes {
               yamlFile 'Jenkins-maven.yaml'
               workspaceVolume dynamicPVC(storageClassName:'ebs-gp3-sc', accessModes: 'ReadWriteOnce', requestsSize: '10Gi')
             }
        }
        steps {
          container('maven') {
             sh 'mvn clean package -Dmaven.test.skip=true'
          }
        }
      }
    }
}
